// 既定値を上書きするには、このファイル内にキー バインドを挿入します
[
{ "key": "ctrl+a",                "command": "editor.action.selectAll",
                                     "when": "editorTextFocus" },
{ "key": "ctrl+c",                "command": "editor.action.clipboardCopyAction",
                                     "when": "editorTextFocus" },
{ "key": "shift+ctrl+e",          "command": "cursorEndSelect",
                                     "when": "editorTextFocus" },
{ "key": "ctrl+f",                "command": "actions.find" },
{ "key": "shift+ctrl+f",          "command": "workbench.view.search" },
{ "key": "ctrl+h",                "command": "editor.action.startFindReplaceAction" },
{ "key": "shift+ctrl+h",          "command": "workbench.action.replaceInFiles" },
{ "key": "ctrl+l",                "command": "editor.action.addSelectionToNextFindMatch",
                                     "when": "editorFocus" },
{ "key": "shift+ctrl+l",          "command": "expandLineSelection",
                                     "when": "editorTextFocus" },
{ "key": "ctrl+n",                "command": "workbench.action.files.newUntitledFile" },
{ "key": "ctrl+q",                "command": "workbench.action.closeActiveEditor" },
{ "key": "shift+ctrl+q",          "command": "workbench.action.reopenClosedEditor" },
{ "key": "ctrl+r",                "command": "deleteAllLeft",
                                     "when": "editorTextFocus" },
{ "key": "shift+ctrl+r",          "command": "editor.action.deleteLines",
                                     "when": "editorTextFocus" },
{ "key": "ctrl+s",                "command": "workbench.action.files.save" },
{ "key": "shift+ctrl+s",          "command": "workbench.action.files.saveAs" },
{ "key": "shift+ctrl+t",          "command": "editor.action.copyLinesDownAction",
                                     "when": "editorTextFocus" },
{ "key": "ctrl+v",                "command": "editor.action.clipboardPasteAction",
                                     "when": "editorTextFocus" },
{ "key": "ctrl+w",                "command": "cursorHome",
                                     "when": "editorTextFocus" },
{ "key": "shift+ctrl+w",          "command": "cursorHomeSelect",
                                     "when": "editorTextFocus" },
{ "key": "ctrl+x",                "command": "editor.action.clipboardCutAction",
                                     "when": "editorTextFocus" },
{ "key": "ctrl+y",                "command": "redo",
                                     "when": "editorTextFocus" },
{ "key": "ctrl+z",                "command": "undo",
                                     "when": "editorTextFocus" },
{ "key": "ctrl+enter",            "command": "editor.action.insertLineAfter",
                                     "when": "editorTextFocus" },
{ "key": "ctrl+\\",               "command": "workbench.action.quickOpen" },
{ "key": "shift+ctrl+\\",         "command": "workbench.action.showCommands" },
{ "key": "ctrl+[",                "command": "editor.action.indentLines",
                                     "when": "editorTextFocus" },
{ "key": "ctrl+]",                "command": "editor.action.outdentLines",
                                     "when": "editorTextFocus" },
{ "key": "ctrl+/",                "command": "editor.action.commentLine",
                                     "when": "editorTextFocus" },
{ "key": "ctrl+tab",              "command": "workbench.action.nextEditor" },
{ "key": "shift+ctrl+tab",        "command": "workbench.action.previousEditor" },
{ "key": "ctrl+up",               "command": "editor.action.moveLinesUpAction",
                                     "when": "editorTextFocus" },
{ "key": "ctrl+down",             "command": "editor.action.moveLinesDownAction",
                                     "when": "editorTextFocus" },
{ "key": "ctrl+right",            "command": "cursorWordStartRight",
                                     "when": "editorTextFocus" },
{ "key": "shift+ctrl+right",      "command": "cursorBottom",
                                     "when": "editorTextFocus" },
{ "key": "ctrl+left",             "command": "cursorWordEndLeft",
                                     "when": "editorTextFocus" },
{ "key": "shift+ctrl+left",       "command": "cursorTop",
                                     "when": "editorTextFocus" },
{ "key": "f3",                    "command": "workbench.action.quickOpen" },
{ "key": "f7",                    "command": "editor.action.format",
                                     "when": "editorTextFocus" },
{ "key": "f11",                   "command": "workbench.action.toggleFullScreen" },
{ "key": "f12",                   "command": "workbench.action.openGlobalSettings" },
{ "key": "shift+f12",             "command": "workbench.action.openGlobalKeybindings" }
]
